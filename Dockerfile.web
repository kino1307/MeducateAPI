FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src

COPY Directory.Build.props ./
COPY src/Meducate.Web/Meducate.Web.csproj src/Meducate.Web/
RUN dotnet restore src/Meducate.Web/Meducate.Web.csproj

COPY src/Meducate.Web/ src/Meducate.Web/
RUN dotnet publish src/Meducate.Web/Meducate.Web.csproj -c Release -o /app
RUN ls -la /app/wwwroot/_framework/ || echo "NO _framework folder"

FROM mcr.microsoft.com/dotnet/aspnet:10.0
WORKDIR /app
COPY --from=build /app .

ENV ASPNETCORE_ENVIRONMENT=Production
ENV ASPNETCORE_URLS=http://+:8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "Meducate.Web.dll"]
