
@page "/api-key"
@rendermode InteractiveServer

@inject Meducate.Web.Services.ApiService Api
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject IHttpContextAccessor HttpContextAccessor
@inject Meducate.Web.Services.ToastService Toast

@using Microsoft.AspNetCore.WebUtilities
@using Meducate.Web.Models

<PageTitle>Generate API Key - Meducate API</PageTitle>

<div class="container min-vh-100 d-flex justify-content-center pt-5">
    <div class="row w-100 justify-content-center">
        <div class="col-md-6 col-lg-5">

            <h3 class="fw-bold mb-2 text-center">Generate your first API key</h3>
            <p class="text-muted text-center mb-4">
                You'll use this key to authenticate requests to the Meducate API. You can create additional keys later from your dashboard.
            </p>

            @if (_isLoading)
            {
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading…</span>
                    </div>
                </div>
            }
            else
            {
            <div class="card">
                <div class="card-body">

                    @if (!_hasKey && !_isSubmitting)
                    {
                        <div class="text-center">
                            <p class="text-muted mb-3">
                                Your API key will be shown <strong>once</strong>.
                                Make sure you copy it and store it securely.
                            </p>

                            <button type="button" class="btn btn-primary" disabled="@_isSubmitting" @onclick="Generate">
                                Generate first API key
                            </button>
                        </div>
                    }

                    @if (_isSubmitting)
                    {
                        <p class="text-center text-muted">
                            Generating your API key…
                        </p>
                    }

                    @if (_apiKey is not null)
                    {
                        <div class="mt-3">

                            <div class="alert alert-warning small">
                                This API key will not be shown again.
                            </div>

                            <label class="form-label fw-semibold">Your API key</label>

                            <div class="input-group">
                                <input class="form-control font-monospace"
                                       readonly
                                       value="@_apiKey.ApiKey" />

                                <button class="btn btn-outline-secondary"
                                        @onclick="Copy">
                                    Copy
                                </button>
                            </div>

                            <p class="text-muted small mt-2">
                                Use this value in the <code>X-Api-Key</code> header.
                            </p>

                            <hr />

                            <div class="text-center">
                                <a href="/dashboard" class="btn btn-primary" data-enhance-nav="false">Go to Dashboard</a>
                            </div>
                        </div>
                    }

                </div>
            </div>
            }

        </div>
    </div>
</div>

@code {
    private bool _isLoading = true;
    private UserStatusResult? _userStatus;

    private Guid _organisationId;

    private bool _isSubmitting;
    private bool _hasKey => _apiKey is not null;

    private ApiKeyResult? _apiKey;

    protected override async Task OnInitializedAsync()
    {
        var uri = Nav.ToAbsoluteUri(Nav.Uri);
        var query = QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("orgId", out var value) && Guid.TryParse(value, out var id))
            _organisationId = id;

        var hasCookie = HttpContextAccessor.HttpContext?.Request.Cookies.ContainsKey("meducateapi_auth") ?? false;
        if (!hasCookie)
        {
            Nav.NavigateTo("/register", replace: true);
            return;
        }

        _userStatus = await Api.GetUserStatusAsync();

        if (_userStatus is null)
        {
            Nav.NavigateTo("/register", replace: true);
            return;
        }

        if (_userStatus.OrganisationId is null)
        {
            Nav.NavigateTo("/create-organisation", replace: true);
            return;
        }

        if (_organisationId == Guid.Empty)
            _organisationId = _userStatus.OrganisationId.Value;

        _isLoading = false;
    }

    private async Task Generate()
    {
        if (_isSubmitting)
            return;

        _isSubmitting = true;

        try
        {
            var response = await Api.CreateApiKeyAsync(_organisationId);

            if (!response.IsSuccess || response.Data is null)
            {
                Toast.Error(response.Message ?? "Unable to generate API key.");
                return;
            }

            _apiKey = response.Data;
        }
        catch
        {
            Toast.Error("Something went wrong while generating your API key.");
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private async Task Copy()
    {
        if (_apiKey is null)
            return;

        await JS.InvokeVoidAsync("navigator.clipboard.writeText", _apiKey.ApiKey);
        Toast.Success("API key copied to clipboard");
    }

}